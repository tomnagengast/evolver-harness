{
  "$schema": "https://codehost.anthropic.com/schemas/hooks.json",
  "hooks": {
    "PostToolCall": {
      "command": "node",
      "args": ["hooks/collect.js"],
      "description": "Log tool calls to the evolver trace logger",
      "env": {
        "EVOLVER_DB_PATH": "${HOME}/.evolver/expbase.db",
        "EVOLVER_STATE_FILE": "/tmp/evolver-harness-session.json"
      }
    },
    "SessionStart": {
      "command": "node",
      "args": ["hooks/session-start.js"],
      "description": "Initialize a new trace logging session",
      "env": {
        "EVOLVER_DB_PATH": "${HOME}/.evolver/expbase.db",
        "EVOLVER_STATE_FILE": "/tmp/evolver-harness-session.json"
      }
    },
    "SessionEnd": {
      "command": "node",
      "args": ["hooks/session-end.js"],
      "description": "Finalize and save the trace logging session",
      "env": {
        "EVOLVER_DB_PATH": "${HOME}/.evolver/expbase.db",
        "EVOLVER_STATE_FILE": "/tmp/evolver-harness-session.json"
      }
    }
  }
}
