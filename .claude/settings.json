{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun --cwd $CLAUDE_PROJECT_DIR hooks/session-start.ts",
            "timeout": 10
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun --cwd $CLAUDE_PROJECT_DIR hooks/prompt-submit.ts",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun --cwd $CLAUDE_PROJECT_DIR hooks/post-tool-use.ts",
            "timeout": 5
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun --cwd $CLAUDE_PROJECT_DIR hooks/session-end.ts",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
