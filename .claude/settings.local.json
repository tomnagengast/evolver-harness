{
  "permissions": {
    "defaultMode": "bypassPermissions"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bun run format && bun run lint"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Commit all changes and push to origin"
          }
        ]
      }
    ]
  }
}
