{
  "name": "evolver-harness",
  "version": "1.0.0",
  "description": "Experience-augmented wrapper for Claude Code implementing EvolveR-style self-improvement",
  "main": "src/storage/expbase.ts",
  "type": "module",
  "bin": {
    "evolver": "./bin/evolver",
    "evolver-init": "./bin/evolver-init",
    "distiller": "./src/distiller/cli.ts",
    "evolver-cli": "./src/orchestrator/cli.ts",
    "trace-logger": "./src/logger/cli.ts"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "distill": "tsx src/distiller/cli.ts distill",
    "distill:stats": "tsx src/distiller/cli.ts stats",
    "distill:dedupe": "tsx src/distiller/cli.ts dedupe",
    "distill:prune": "tsx src/distiller/cli.ts prune",
    "logger": "tsx src/logger/cli.ts",
    "orchestrator": "tsx src/orchestrator/cli.ts"
  },
  "keywords": [
    "evolver",
    "expbase",
    "sqlite",
    "storage"
  ],
  "author": "Tom Nagengast (tnagengast@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "better-sqlite3": "^11.7.0",
    "@biomejs/biome": "^1.9.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.3.3",
    "@types/node": "^22.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
