{
  "name": "evolver-harness",
  "version": "1.0.0",
  "description": "Experience-augmented extension for Claude Code implementing EvolveR-style self-improvement",
  "main": "src/index.ts",
  "type": "module",
  "bin": {
    "distiller": "./src/distiller/cli.ts"
  },
  "scripts": {
    "test": "node --import tsx --test 'src/**/*.test.ts' 'hooks/**/*.test.ts'",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "tsc --noEmit",
    "distill": "tsx src/distiller/cli.ts distill",
    "distill:stats": "tsx src/distiller/cli.ts stats",
    "distill:trace": "tsx src/distiller/cli.ts distill-trace",
    "distill:dedupe": "tsx src/distiller/cli.ts dedupe",
    "distill:prune": "tsx src/distiller/cli.ts prune"
  },
  "keywords": ["evolver", "expbase", "sqlite", "storage", "claude-code"],
  "author": "Tom Nagengast (tnagengast@gmail.com)",
  "license": "ISC",
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.55",
    "@biomejs/biome": "^1.9.4",
    "better-sqlite3": "^11.7.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.3.3",
    "@types/node": "^22.10.1",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
