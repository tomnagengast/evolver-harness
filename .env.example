# Evolver Harness Configuration

# Path to the experience base SQLite database
EVOLVER_DB_PATH=~/.evolver/expbase.db

# Path to session state file (tracks tool calls during session)
EVOLVER_STATE_FILE=~/.evolver/session-state.json

# Enable verbose logging for hooks
EVOLVER_VERBOSE=false

# Maximum number of principles to inject at session start
EVOLVER_MAX_PRINCIPLES=10

# Minimum principle score threshold (0.0-1.0)
EVOLVER_MIN_SCORE=0.5

