# Evolver Harness Configuration

# Path to the experience base SQLite database
EVOLVER_DB_PATH=expbase.db

# Directory for session state files (one per concurrent session)
EVOLVER_STATE_DIR=~/.evolver/sessions

# Enable verbose logging for hooks
EVOLVER_VERBOSE=false

# Maximum number of principles to inject at session start
EVOLVER_MAX_PRINCIPLES=10

# Minimum principle score threshold (0.0-1.0)
EVOLVER_MIN_SCORE=0.5

# Auto-distillation settings
# Set to "false" to disable automatic distillation
EVOLVER_AUTO_DISTILL=true

# Number of undistilled traces before triggering background distillation
EVOLVER_AUTO_DISTILL_THRESHOLD=5

OPENAI_API_KEY=
